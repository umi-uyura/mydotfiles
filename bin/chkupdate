#!/bin/sh

echo
echo "### Checking for apt package updates ..."
echo

sudo apt update
apt list --upgradable

echo
echo "### Checking for Homebrew updates ..."
echo

brew outdated

echo
echo "### Updating asdf plugins ..."
echo

asdf plugin update --all

echo
echo "### Checking Node.js package updates ..."
echo

ncu -g

echo
echo "### Checking Python package updates ..."
echo

pip list --outdated
